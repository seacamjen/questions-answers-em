{{#if addNewQuestion}}
  <div>
    <form>
      <div class="form-group">
        <label for="question">Question:</label>
        {{textarea value=question id="question"}}
      </div>

      <div class="form-group">
        <label for="author">Name:</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Notes:</label>
        {{textarea value=notes id="notes"}}
      </div>
      <button type="btn btn-default" {{action 'saveQuestion'}}>Save</button>
    </form>
  </div>
{{else}}
  <button type="btn btn-default" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
